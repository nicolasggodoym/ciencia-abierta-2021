llik.9 <-as.numeric(lc9$llik)
llik.10 <-as.numeric(lc10$llik)
llik.11 <-as.numeric(lc11$llik)
llik.12 <-as.numeric(lc12$llik)

chisq.1 <- as.numeric(lc2$Chisq)
