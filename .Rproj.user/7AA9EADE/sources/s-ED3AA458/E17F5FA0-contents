G.1 <- as.numeric(lc1$Gsq)
G.2 <- as.numeric(lc2$Gsq)
G.3 <- as.numeric(lc3$Gsq)
G.4 <- as.numeric(lc4$Gsq)
G.5 <- as.numeric(lc5$Gsq)
